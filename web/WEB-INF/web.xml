<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Loginmanager</servlet-name>
        <servlet-class>chatapplication.servelt.Loginmanager</servlet-class>
    </servlet>
    <servlet>
        <description>/message</description>
        <servlet-name>MessageSend</servlet-name>
        <servlet-class>chatapplication.servelt.MessageSend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageRead</servlet-name>
        <servlet-class>chatapplication.servelt.MessageRead</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupEdit</servlet-name>
        <servlet-class>chatapplication.servelt.GroupEdit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupDelete</servlet-name>
        <servlet-class>chatapplication.servelt.GroupDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewGroup</servlet-name>
        <servlet-class>chatapplication.servelt.NewGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowGroupMes</servlet-name>
        <servlet-class>chatapplication.servelt.ShowGroupMes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>chatapplication.servelt.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Loginmanager</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageSend</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageRead</servlet-name>
        <url-pattern>/messageread</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupEdit</servlet-name>
        <url-pattern>/groupedit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupDelete</servlet-name>
        <url-pattern>/deletegroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewGroup</servlet-name>
        <url-pattern>/newgroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowGroupMes</servlet-name>
        <url-pattern>/showgroupmes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>
             chatapplication.servelt.MyAppServletContextListener 
        </listener-class>
    </listener>
</web-app>
